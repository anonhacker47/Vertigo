{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "importHelpers": true,
      "isolatedModules": true,
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "paths": {
        "@/*": [
          "./src/*" // set path `@/*` as alias of `src/*`
        ]
      },
      "types": ["vite/client"]
    }
  }
  